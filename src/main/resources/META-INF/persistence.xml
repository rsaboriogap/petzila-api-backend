<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="petzila-api-pu" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>jdbc/petzila</jta-data-source>

        <class>com.petzila.api.domain.Comment</class>
        <class>com.petzila.api.domain.Device</class>
        <class>com.petzila.api.domain.IndieUsers</class>
        <class>com.petzila.api.domain.Notification</class>
        <class>com.petzila.api.domain.Pet</class>
        <class>com.petzila.api.domain.PetFollow</class>
        <class>com.petzila.api.domain.PetziConnect</class>
        <class>com.petzila.api.domain.Post</class>
        <class>com.petzila.api.domain.PostLike</class>
        <class>com.petzila.api.domain.PostReport</class>
        <class>com.petzila.api.domain.SessionRequest</class>
        <class>com.petzila.api.domain.User</class>

        <!--<mapping-file>META-INF/queries/user-finder-queries.xml</mapping-file>-->

        <properties>
            <property name="hibernate.connection.datasource" value="jdbc/petzila" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
            <property name="hibernate.show_sql" value="false" />
            <!--<property name="hibernate.format_sql" value="true"/>-->
            <!--<property name="hibernate.default_batch_fetch_size" value="60" />-->

            <!--<property name="hibernate.search.default.directory_provider" value="filesystem" />-->
            <!--<property name="hibernate.search.default.indexBase" value="/var/lucene/indexes" />-->
        </properties>
    </persistence-unit>
</persistence>