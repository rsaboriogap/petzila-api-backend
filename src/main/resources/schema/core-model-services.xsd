<?xml version="1.0"?>
<xsd:schema targetNamespace="urn:com/petzila/api/model"
            xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            xmlns:jaxb="http://java.sun.com/xml/ns/jaxb"
            jaxb:version="2.0">

    <!--System objects for handling responses: BEGIN-->
    <xsd:element name="XResult">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="result" type="xsd:anyType" minOccurs="1" maxOccurs="1"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>

    <xsd:element name="XError">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="message" type="xsd:string" minOccurs="1" maxOccurs="1"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>

    <xsd:complexType name="XIds">
        <xsd:sequence>
            <xsd:element name="ids" type="xsd:long" minOccurs="1" maxOccurs="unbounded"/>
        </xsd:sequence>
    </xsd:complexType>
    <!--System objects for handling responses: END-->


    <xsd:element name="XPasswordRequest">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="email" type="xsd:string" minOccurs="1" maxOccurs="1"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>

    <xsd:element name="XPasswordReset">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="reset_code" type="xsd:string" minOccurs="1" maxOccurs="1"/>
                <xsd:element name="email" type="xsd:string" minOccurs="1" maxOccurs="1"/>
                <xsd:element name="new_password" type="xsd:string" minOccurs="1" maxOccurs="1"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>

    <xsd:element name="XPassword">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="current_password" type="xsd:string" minOccurs="1" maxOccurs="1"/>
                <xsd:element name="new_password" type="xsd:string" minOccurs="1" maxOccurs="1"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>

