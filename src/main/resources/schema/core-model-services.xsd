    <xsd:element name="XIdentity">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="auth_token" type="xsd:string" minOccurs="1" maxOccurs="1"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>

    <xsd:element name="XSignUp">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="email" type="xsd:string" minOccurs="1" maxOccurs="1"/>
                <xsd:element name="password" type="xsd:string" minOccurs="1" maxOccurs="1"/>
                <xsd:element name="first_name" type="xsd:string" minOccurs="1" maxOccurs="1"/>
                <xsd:element name="last_name" type="xsd:string" minOccurs="1" maxOccurs="1"/>
                <xsd:element name="mobile_number" type="xsd:long" minOccurs="0" maxOccurs="1"/>
                <xsd:element name="locale_id" type="xsd:string" minOccurs="0" maxOccurs="1"/>
                <xsd:element name="time_zone_id" type="xsd:string" minOccurs="0" maxOccurs="1"/>
                <xsd:element name="country_iso_2_letter_code" type="xsd:string" minOccurs="1" maxOccurs="1"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>

    <xsd:complexType name="XUser">
        <xsd:sequence>
            <xsd:element name="id" type="xsd:long" minOccurs="1" maxOccurs="1"/>
            <xsd:element name="first_name" type="xsd:string" minOccurs="1" maxOccurs="1"/>
            <xsd:element name="last_name" type="xsd:string" minOccurs="0" maxOccurs="1"/>
            <xsd:element name="image_url" type="xsd:string" minOccurs="0" maxOccurs="1"/>
        </xsd:sequence>
    </xsd:complexType>

    <xsd:complexType name="XTimeZone">
        <!--readonly-->
        <xsd:sequence>
            <xsd:element name="id" type="xsd:string" minOccurs="1" maxOccurs="1"/>
            <xsd:element name="name" minOccurs="1" maxOccurs="1">
                <xsd:simpleType>
                    <xsd:restriction base="xsd:string">
                        <xsd:minLength value="1"/>
                        <xsd:maxLength value="100"/>
                    </xsd:restriction>
                </xsd:simpleType>
            </xsd:element>
            <xsd:element name="offset" type="xsd:int" minOccurs="1" maxOccurs="1"/>
        </xsd:sequence>
    </xsd:complexType>
</xsd:schema>